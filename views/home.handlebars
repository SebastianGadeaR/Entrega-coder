<div>
    <h1>Stock de productos</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Stock</th>
                <th>Code</th>
            </tr>
        </thead>
    </table>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>${{this.price}}</td>
            <td>{{this.category}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.code}}</td>
        </tr>
        {{#each}}
    </tbody>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/public/js/index.js"></script>

<script>
  const socket = io();


  socket.on('productCreated', (product) => {

    const productList = document.getElementById();
    const newProduct = document.createElement('li');
    newProduct.textContent = product.id + product.title + product.description + product.price + product.category + product.stock + product.code;
    productList.appendChild(newProduct);
  });


  socket.on('productDeleted', (productId) => {

    const productList = document.getElementById();
    const products = Array.from(productList.children);
    for (let i = 0; i < products.length; i++) {
      const product = products[i];
      if (product.textContent.includes(productId)) {
        productList.removeChild(product);
        break;
      }
    }
  });
  </script>